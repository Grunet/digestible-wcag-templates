{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "command": "deno run --allow-read=.,../dist/ --allow-write=../dist/ ./clean.ts"
    },
    {
      "label": "copy",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      // Have to use the "--unstable" flag for this to work. See https://github.com/denoland/deno/issues/5175
      "command": "deno run --unstable --allow-read=.,../src/,../dist/ --allow-write=../dist/ ./copy.ts"
    },
    {
      "label": "extractInterfaces",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "command": "deno run --allow-read=.,../dist/ --allow-write=../dist/ ./extractInterfaces.ts"
    },
    {
      "label": "createEndpoints",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "command": "deno run --allow-read=.,../dist/ --allow-write=../dist/ ./createEndpoints.ts"
    },
    {
      "label": "Run all scripts",
      "group": "build",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/scripts/"
      },
      "dependsOn": ["clean", "copy", "extractInterfaces", "createEndpoints"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Run all tests",
      "group": "test",
      "type": "shell",
      "options": {
        "cwd": "${cwd}/test/"
      },
      //The "--reload" is to make sure the latest version of the imported remote file is pulled
      "command": "deno test --reload --allow-read --allow-net"
    }
  ]
}
